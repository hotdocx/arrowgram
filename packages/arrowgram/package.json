{
    "name": "@hotdocx/arrowgram",
    "version": "1.0.0",
    "description": "A React library for creating commutative diagrams with a declarative JSON syntax.",
    "author": "Antigravity",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hotdocx/arrowgram.git"
    },
    "keywords": [
        "commutative-diagrams",
        "category-theory",
        "react",
        "svg",
        "quiver"
    ],
    "type": "module",
    "main": "./dist/arrowgram.umd.cjs",
    "module": "./dist/arrowgram.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/arrowgram.js",
            "require": "./dist/arrowgram.umd.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite build --watch",
        "build": "vite build",
        "test": "vitest"
    },
    "peerDependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "dependencies": {
        "katex": "^0.16.22"
    },
    "devDependencies": {
        "@types/katex": "^0.16.8",
        "@types/node": "^25.0.6",
        "@types/react": "^19.2.8",
        "@types/react-dom": "^19.2.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.4.0",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3",
        "vite": "^6.0.0",
        "vite-plugin-dts": "^4.5.3",
        "vitest": "^4.0.16",
        "zod": "^4.3.5"
    }
}